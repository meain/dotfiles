#!/bin/sh

set -e

if [ -z "$1" ]; then
    echo "Usage: $0 <workspace_name> [command]"
    echo ""
    echo "Commands:"
    echo "  <workspace_name>           Create or open a workspace."
    echo "  <workspace_name> new       Create a new commit in the workspace based on previous commit."
    echo "  <workspace_name> sync      Sync additional files into workspace."
    echo "  update                     Update stale workspaces."
    echo "  new                        Initialize workspaces at previous commit."
    echo "  drop|delete|remove|rm <ws> Remove the workspace named <ws>."
    echo "  ls|list                    List all workspaces."
    echo ""
    echo "Examples:"
    echo "  $0 myws                  # create/open 'myws'"
    echo "  $0 myws claude-code      # create/open 'myws' and run claude-code"
    echo "  $0 myws zsh              # create/open 'myws' and start a shell"
    echo "  $0 myws new              # create/open 'myws' and bump workspace to latest commit"
    echo "  $0 update                # update stale workspaces"
    echo "  $0 drop myws             # delete workspace 'myws'"
    exit 1
fi

name="$1" && shift
base_dir="$HOME/worksapces"
mkdir -p "$base_dir"
root="$(jj root)"
root_without_prefix="${root#"$HOME/dev/"}"
ws_dir="$base_dir/$root_without_prefix-$name"
prev_commit="$(jj log --revisions @- --limit 1 --template=commit_id --no-graph)"

copy_from_base_if_exists() {
    if [ -e "$root/$1" ]; then
        if ! git ls-files --error-unmatch "$root/$1" >/dev/null 2>&1; then
            mkdir -p "$(dirname "$ws_dir/$1")"
            cp -r "$root/$1" "$ws_dir/$1"
        fi
    fi
}

link_from_base_if_exists() {
    if [ -e "$root/$1" ]; then
        if ! git ls-files --error-unmatch "$root/$1" >/dev/null 2>&1; then
            mkdir -p "$(dirname "$ws_dir/$1")"
            rm -rf "$ws_dir/$1"
            ln -s "$root/$1" "$ws_dir/$1"
        fi
    fi
}

sync_additional_files() {
    # copy files that might have to be unique per workspace
    copy_from_base_if_exists "shell.nix"
    copy_from_base_if_exists ".envrc"

    # link files that can be shared across workspaces
    link_from_base_if_exists ".github/copilot-instructions.md"
    link_from_base_if_exists "AGENTS.md"
    link_from_base_if_exists "CLAUDE.md"
    link_from_base_if_exists ".llmrules"
    link_from_base_if_exists ".mscripts"
    link_from_base_if_exists ".claude/settings.local.json" # copy claude settings
}

case "$name" in
update)
    # update stale
    jj workspace list | cut -d: -f1 | grep -v default |
        while read -r ws; do
            ws_dir="$base_dir/$root_without_prefix-$ws"
            cd "$ws_dir"
            echo "[WORKSPACE] $ws"
            jj workspace update-stale || true
        done

    exit 0
    ;;
new)
    jj workspace list | cut -d: -f1 | grep -v default |
        while read -r ws; do
            ws_dir="$base_dir/$root_without_prefix-$ws"
            cd "$ws_dir"
            echo "[WORKSPACE] $ws"
            jj workspace update-stale || true
            jj new -r "$prev_commit"
        done

    exit 0
    ;;
# sync)
#     jj workspace list | cut -d: -f1 | grep -v default |
#         while read -r ws; do
#             ws_dir="$base_dir/$root_without_prefix-$ws"
#             sync_additional_files
#         done
#     echo "Synced additional files from all workspaces"
#     exit 0
#     ;;
drop | delete | remove | rm)
    # delete the workspace
    [ -z "$1" ] && echo "Usage: $0 drop|delete|remove <workspace_name>" && exit 1
    name="$1"
    if [ -d "$base_dir/$root_without_prefix-$name" ]; then
        jj workspace forget "$name"
        rm -rf "$base_dir/$root_without_prefix-$name"
        echo "Workspace '$name' removed"
        exit 0
    else
        echo "Workspace '$name' does not exist"
        exit 1
    fi
    ;;
ls | list)
    jj workspace list
    exit 0
    ;;
esac

mkdir -p "$(dirname $ws_dir)"

if [ ! -d "$ws_dir" ]; then
    jj workspace add --name "$name" "$ws_dir"
    sync_additional_files
    echo "Workspace '$name' created at $ws_dir"
fi

cd "$ws_dir" || exit 1
pwd | pbcopy

if [ -f .envrc ]; then
    direnv allow
fi

if [ -n "$1" ]; then
    case "$1" in
    new)
        # update to default's commit
        jj workspace update-stale || true
        jj new -r "$prev_commit"
        ;;
    sync)
        sync_additional_files
        echo "Synced additional files from current workspace"
        ;;
    *)
        echo "Running command: $*"
        zsh -ic "$*"
        ;;
    esac
fi
