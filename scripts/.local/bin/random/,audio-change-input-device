#!/bin/sh

set -eo pipefail

default="$(pactl info | awk '/Default Source/{print $3}')"
pacmd list-sources |
	grep -E '(name: <|device.description)' |
	sed 'N;s/\n/ /;s|.*name: <\([^>]*\).*= "\([^"]*\)"|\2 :\1:|' |
	sed "s/$default:/$default: [current]/" |
	,picker -p "Select audio device" |
	awk -F':' '{print $(NF-1)}' | xargs pacmd set-default-source
