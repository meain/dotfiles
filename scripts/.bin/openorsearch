#!/bin/sh

SEARCH_BASE='https://duckduckgo.com/?q='

if echo "$1" | grep -E '^https://[A-z]+.zoom.us/j/' > /dev/null; then
  open -a /Applications/zoom.us.app "$1"
  echo "ğŸ“ $1"
elif echo "$1" | grep -E '^http[s]?://' > /dev/null; then
  open "$1"
  echo "ğŸ”— $1"
else
  open "$SEARCH_BASE$1"
  echo "ğŸ” $1"
fi
