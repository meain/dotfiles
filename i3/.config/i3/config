set $mod Mod4
font pango:Anka/Coder 7

# Startup entries
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec --no-startup-id guake
exec --no-startup-id warpd
exec --no-startup-id mpd
exec --no-startup-id cbatticon
exec --no-startup-id clipmenud
exec --no-startup-id blueman-applet
exec --no-startup-id kdeconnect-indicator
exec_always --no-startup-id xset r rate 220 33
exec_always --no-startup-id xinput set-prop "ETPS/2 Elantech Touchpad" "libinput Tapping Enabled" 1
exec_always --no-startup-id i3-auto-layout

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pactl set-source-volume @DEFAULT_SOURCE@ +10% && $refresh_i3status
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-source-volume @DEFAULT_SOURCE@ -10% && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl specific '3-'
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl specific '+3'

# Music keybinding
bindsym XF86AudioPlay exec "zsh -ic ,music-playpause"
bindsym XF86AudioPrev exec "zsh -ic ,music-prevous"
bindsym XF86AudioNext exec "zsh -ic ,music-next"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier Mod1

# start terminal and editor
bindsym $mod+Return exec sakura
bindsym $mod+e exec emacsclient -nc -a ''
bindsym $mod+t exec emacsclient -cne '(vterm \"terminal\")' -a ''

# default floating apps
for_window [class="blueman-manager-wrapped"] floating enable

# scratchpad
bindsym $mod+Shift+i move scratchpad
bindsym $mod+i scratchpad show

# kill focused window
bindsym $mod+q kill
# The middle button over a titlebar kills the window
# bindsym --release button2 kill

# Lock and suspend
bindsym $mod+Shift+q exec "zsh -ic ,lock-screen"
bindsym $mod+Mod1+q exec "zsh -ic ,lock-screen && systemctl suspend"

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run -i -fn 'Anka/Coder:size=8' -nb '#000000' -nf '#aaaaaa' -sb '#263238' -sf '#ffffff'
bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop 

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# changing workspace
bindsym $mod+u workspace prev_on_output
bindsym $mod+o workspace next_on_output
bindsym $mod+s workspace back_and_forth
bindsym $mod+Shift+u workspace prev_on_output
bindsym $mod+Shift+o workspace next_on_output

# moving workspace
bindsym $mod+Mod1+1 [workspace=1] move workspace to output current
bindsym $mod+Mod1+2 [workspace=2] move workspace to output current
bindsym $mod+Mod1+3 [workspace=3] move workspace to output current
bindsym $mod+Mod1+4 [workspace=4] move workspace to output current
bindsym $mod+Mod1+5 [workspace=5] move workspace to output current
bindsym $mod+Mod1+6 [workspace=6] move workspace to output current
bindsym $mod+Mod1+7 [workspace=7] move workspace to output current
bindsym $mod+Mod1+8 [workspace=8] move workspace to output current
bindsym $mod+Mod1+9 [workspace=9] move workspace to output current
bindsym $mod+Mod1+0 [workspace=0] move workspace to output current
bindsym $mod+Mod1+l move workspace to output right
bindsym $mod+Mod1+h move workspace to output left
bindsym $mod+Mod1+j move workspace to output down
bindsym $mod+Mod1+k move workspace to output up

# window arrangement
bindsym $mod+v split toggle
bindsym $mod+Shift+f fullscreen toggle
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+t layout tabbed
bindsym $mod+Shift+v layout toggle split

# toggle tiling / floating
bindsym $mod+f floating toggle
bindsym button3 floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# specify monitors for workspaces
workspace $ws1 output eDP
workspace $ws2 output eDP
workspace $ws3 output DisplayPort-0
workspace $ws4 output DisplayPort-0
workspace $ws5 output DisplayPort-0
workspace $ws9 output HDMI-A-0
workspace $ws10 output HDMI-A-0

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# other keybinds
bindsym $mod+Mod1+Control+u exec "zsh -ic ,mail-unread-notify"
bindsym $mod+Mod1+Control+Shift+u exec "zsh -ic 'notmuch tag +notified tag:imbox and tag:unread && notify \\"All emails marked read\\"'"
bindsym $mod+Mod1+Control+i exec "GUI_PICKER=1 zsh -ic ,se"
bindsym $mod+Mod1+Control+p exec "zsh -ic \\"clipmenu -i -fn 'Anka/Coder:size=8' -nb '#000000' -nf '#aaaaaa' -sb '#263238' -sf '#ffffff'\\""
bindsym $mod+Mod1+Control+Shift+p exec "zsh -ic 'notify Clipboard \\"$(pbpaste)\\"'"
bindsym $mod+Mod1+Control+o exec "zsh -ic ',screenshot'"
bindsym $mod+Mod1+Control+Shift+o exec "zsh -ic ',screenshot full'"
bindsym $mod+Mod1+Control+j exec "zsh -ic ,thing-for-today-popup && i3-msg floating toggle"
bindsym $mod+Mod1+Control+l exec pcmanfm
bindsym $mod+Mod1+Control+Shift+l exec "zsh -ic 'dragon $(pbpaste)'"
bindsym $mod+Mod1+Control+m exec "zsh -ic ',song | xargs -0 notify'"

# i3 keybindings
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window
mode "resize" {
    bindsym h resize shrink width 3 px or 3 ppt
    bindsym j resize grow height 3 px or 3 ppt
    bindsym k resize shrink height 3 px or 3 ppt
    bindsym l resize grow width 3 px or 3 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Configure some settings
focus_follows_mouse no
workspace_auto_back_and_forth yes
default_orientation auto
title_align left
force_display_urgency_hint 1000 ms
hide_edge_borders smart
default_border pixel 5
# gaps inner all set 20

# Styling               border  backgr. text    indicator child_border
client.focused          #FFFFFF #FFFFFF #FFFFFF #F2F2F2   #FFFFFF
client.focused_inactive #000000 #000000 #FFFFFF #000000   #000000
client.unfocused        #000000 #000000 #FFFFFF #000000   #000000
client.urgent           #900000 #900000 #FFFFFF #900000   #900000
client.placeholder      #000000 #000000 #FFFFFF #000000   #000000

# i3bar to display a workspace bar
bar {
   status_command i3status

   colors {
      separator #cccccc
      background  #000000
      statusline #FFFFFF
      focused_workspace  #586E75 #586E75 #FFFFFF
      active_workspace #2D2D2D #2D2D2D #FFFFFF
      inactive_workspace #1F1F1F #1F1F1F #C7C7C7
      urgent_workspace #AE4544 #AE4544 #FFFFFF
   }
}
