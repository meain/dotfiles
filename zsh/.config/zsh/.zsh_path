#!/bin/sh

# Golang
export GOPATH=~/.cache/go
export GOBIN=$GOPATH/bin
PATH=$PATH:$GOPATH/bin

# Poetry
PATH="$HOME/.poetry/bin:$PATH"

# pyenv
export PYENV_ROOT="$HOME/.cache/pyenv"
PATH="$PYENV_ROOT/bin:$PATH"

# Python
PATH=/usr/local/bin:$PATH
export WORKON_HOME=~/.cache/virtual_envs

# ruby
export PATH="/usr/local/opt/ruby/bin:$PATH"
export GEM_HOME=$HOME/.cache/gems
export PATH=$HOME/.cache/gems/bin:$PATH

# node
export NVM_DIR="$HOME/.cache/nvm"

# Latex
PATH=/Library/TeX/texbin:$PATH

# Linuxbrew
PATH=$PATH:/home/linuxbrew/.linuxbrew/bin

# Wasmer
export WASMER_DIR="/Users/meain/.wasmer"
[ -s "$WASMER_DIR/wasmer.sh" ] && . "$WASMER_DIR/wasmer.sh"

# PATH
PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/git/bin:$HOME/.bin:$PATH
PATH=$PATH:$HOME/.temp_bin
PATH="/usr/local/opt/gettext/bin:$PATH"

export PATH

# rustup and cargo
export RUSTUP_HOME="$HOME/.cache/rustup"
export CARGO_HOME="$HOME/.cache/cargo"
export RUST_SRC_PATH="$(rustc --print sysroot)"

# datafiles
export DATAFILES_PATH="$HOME/.config/datafiles"

# grip
export GRIPHOME="$HOME/.cache/grip"

# android
export ANDROID_HOME="$HOME/.local/share/android"
export PATH="$PATH:$ANDROID_HOME/cmdline-tools/tools/bin"

# Rust
PATH="$HOME/.cache/cargo/bin:$PATH"

# Flutter & Dart
PATH="$PATH:$HOME/.local/share/flutter/bin"
PATH="$PATH:$HOME/.local/share/flutter/bin/cache/dart-sdk/bin"
export PATH="$PATH":"$HOME/.pub-cache/bin"

# dotnet
export PATH="$PATH":"$HOME/.dotnet"

# emacs
export PATH="$PATH:/Applications/Emacs.app/Contents/MacOS:/Applications/Emacs.app/Contents/MacOS/bin"

# mail
export MAILDIR=$HOME/.local/share/mail/meain
